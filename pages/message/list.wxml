            image="{{item.image_1}}"
            title="{{item.message_name}}">
        <view class="content">
        {{item.message}}
        </view>
    </l-card> -->

  </view>

  <import src="../../utils/tabBar.wxml" />
  <template wx:if="{{hasTabBar}}" is="tabBar" data="{{tabBar: tabBar}}" />
</view>
