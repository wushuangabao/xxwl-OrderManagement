<!--pages/recpt/info.wxml-->
<view style='display:flex;flex-direction:row;height:100%'>

  <view style='width:100rpx;height:100%;' />

  <view class='container'>

    <view class="itemView1">
      <view>
        {{recpt_info.r_number}}
      </view>
      <view>
        {{recpt_info.receipt_name}}
      </view>
      <view>
        {{recpt_info.user_name}}
      </view>
    </view>

    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class='swiper'>
      <block wx:for="{{imgUrls}}" wx:key='id'>
        <swiper-item>
          <image src="{{item}}" mode='aspectFit' bindtap='bindTapImg' class="slide-image" />
        </swiper-item>
      </block>
    </swiper>

    <view class="itemView1">
      {{recpt_info.remark}}
    </view>

  </view>

  <view style='width:100rpx;height:100%' />

</view>