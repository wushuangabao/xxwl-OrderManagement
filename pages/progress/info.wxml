<!--pages/progress/info.wxml-->

<view class='container'>

  <view class="itemView" style="justify-content: space-around;">
    <view>
      {{info.j_number}}
    </view>
    <view>
      {{info.job_name}}
    </view>
  </view>

  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class='swiper'>
    <block wx:for="{{imgUrls}}" wx:key='id'>
      <swiper-item>
        <image src="{{item}}" mode='aspectFit' class="slide-image" data-url='{{item}}' />
      </swiper-item>
    </block>
  </swiper>

  <view class="itemView" style="justify-content: flex-start;">
    {{info.remark}}
  </view>
  
  <view wx:if="{{praiseArray.length>0}}" class="itemView-praise">
    <image src="/imgs/praise.png" class="praise-png"></image>
    <view class='praise-imgs'>
      <view wx:for="{{praiseArray}}" wx:key="ID" class="praise-line">
        <view wx:for="{{item}}" wx:key="id">
          <image src="{{item.image_address}}" class="praise-img"></image>
        </view>
      </view>
    </view>
  </view>

  <view wx:if="{{commentArray.length>0}}" class="itemView-praise">
    <image src="/imgs/message.png" class="comment-png"></image>
    <view class='praise-imgs'>
        <view wx:for="{{commentArray}}" wx:key="id" class="comment-item">
          <view>{{item.user_name + "ï¼š" +item.comment }}</view>
        </view>
      </view>
  </view>

</view>