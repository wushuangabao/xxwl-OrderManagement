<!--pages/progress/info.wxml-->
<view style='display:flex;flex-direction:row;height:100%'>

  <view style='width:100rpx;height:100%;' />

  <view class='container'>

    <view class="itemView1">
      <view>
        {{info.j_number}}
      </view>
      <view>
        {{info.job_name}}
      </view>
    </view>

    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class='swiper'>
      <block wx:for="{{imgUrls}}" wx:key='id'>
        <swiper-item>
          <image src="{{item}}" mode='aspectFit' class="slide-image" data-url='{{item}}'/>
        </swiper-item>
      </block>
    </swiper>

    <view class="itemView1" style="justify-content: flex-start;">
      {{info.remark}}
    </view>

  </view>

  <view style='width:100rpx;height:100%' />

</view>
