/* pages/inquiry/inquiry.wxss */
@import "/utils/tabBar.wxss";
@import "/utils/commentLayer.wxss";

.container {
  background: #f5f5f5;
}

.tit {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 30px;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tit-item {
  width: 375rpx;
  height: 26px;
  padding-top: 4px;
  font-size: 14px;
  color: #555;
  line-height: 26px;
  text-align: center;
}

.title_val {
  background-color: #fff;
  width: 380rpx;
  height: 22px;
  margin-left: 12px;
  margin-top: 4px;
  font-size: 14px;
  color: #555;
  line-height: 22px;
}

.inquiry {
  margin-left: 4px;
  font-size: 12px;
  line-height: 30px;
  color: #999;
}

.list {
  background: #fff;
  display: flex;
  flex-direction: column;
  margin-top: 30px;
  margin-bottom: 120rpx;
}

.receipt-layers {
  display: flex;
  flex-direction: column-reverse;
  border-bottom: 1px solid #ddd;
}

.receipt {
  display: flex;
}

.r-img {
  padding: 10rpx;
  width: 60px;
  height: 60px;
}

.cont {
  display: flex;
  flex: 1;
  flex-direction: column;
  font-size: 14px;
  color: #555;
}

.up-cont {
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
}

.up-cont-item {
  margin-left: 10px;
  justify-content: center;
}

.progress {
  margin-top: 2px;
  font-size: 12px;
  margin-right: 20rpx;
  color: #999;
}

.progress-button {
  width: 180rpx;
  height: 35px;
  position: absolute;
  right: 0;
  z-index: 98;
}

.down-cont {
  margin-top: 10px;
  margin-left: 5px;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}

.remark {
  margin-top: 4px;
}

.more {
  display: flex;
  margin-right: 20rpx;
}

.float-button {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  top: 34px;
  right: 4px;
  z-index: 100;
  background: white;
  border-radius: 50%;
  box-shadow: 0 2px 4px rgb(6, 59, 6);
}