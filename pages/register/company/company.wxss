/* pages/login/company/company.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.input {
  width: 600rpx;
  border-bottom: 1px solid lightgray;
  border-right: 1px solid lightgray;
  border-radius: 4px;
  color: #696969;
  font-size: 36rpx;
  background-color: #fff;
}

.picker {
  color: #696969;
  margin-bottom: 30rpx;
  font-size: 32rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 40rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #707070;
  margin-bottom: 100rpx;
}

.button-list {
  margin-top: 120rpx;
  width: 500rpx;
  display: flex;
}

.button {
  width: 200rpx;
  height: 70rpx;
  font-size: 30rpx;
}

.small-text {
  height: 120rpx;
  padding-top: 5rpx;
  font-size: 12px;
  color: #707070;
}
